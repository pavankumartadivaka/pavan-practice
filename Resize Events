    <p>resize the window</p>
    <p>resize Count :<span id="one"> 0 </span></p>
    <script>
        window.addEventListener("resize",resize);
        let c=0;
        function resize(){
            let res =c+=1
            document.getElementById("one").innerHTML=res
        }
    </script>
